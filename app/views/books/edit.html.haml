- content_for :title_element do
  Edit "#{@book.display_name}" : #{@book.author.name} :

- content_for :title do
  Edit "#{@book.display_name}" (#{link_to @book.author.name, @book.author})

- form_for @book do |f|
  .clearfix 
    = f.label "Title to display"
    .input
      = f.text_field :display_name, :class => "xlarge"
  .actions
    = f.submit "Update", :class => "btn primary"
